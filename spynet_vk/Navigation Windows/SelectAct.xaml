<UserControl x:Class="SpyNet_Vk.SelectAct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpyNet_Vk"
      mc:Ignorable="d" Background="#212121"
      d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded" >

    <Viewbox>
        <Grid Name="mainGrid">
            <Button x:Name="btn_monitor" Width="200" Height="50" 
                Content="Мониторинг" FontSize="20" 
                Margin="286,176,286,303" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btn_monitor_Click" FontFamily="/SpyNet_Vk;component/Fonts/#Reef" />

            <Button x:Name="btn_authorization" Width="240" Height="50" 
                Content="Авторизироваться" FontSize="20"
                 Margin="286,265,286,214" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btn_authorization_Click" FontFamily="/SpyNet_Vk;component/Fonts/#Reef"  />
        </Grid>
    </Viewbox>
</UserControl>
